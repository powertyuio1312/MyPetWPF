<Window x:Class="MyPets.Map"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPets"
        mc:Ignorable="d"
        Title="Map" Height="500" Width="800" ResizeMode="NoResize">
    <WindowChrome.WindowChrome >
        <WindowChrome CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid Background="#cc99ff">
        <Grid.RowDefinitions>
            <RowDefinition Height="400"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <WebBrowser  Name="Wb" />
        
        <Button Content="Закрыть" x:Name="ButtonClose" Grid.Row="1" Width="100" Height="50"  Margin="0,0,0,0" Background="#9933ff" BorderBrush="#9933ff" Click="ButtonClose_Click"/>
        
    </Grid>
</Window>
